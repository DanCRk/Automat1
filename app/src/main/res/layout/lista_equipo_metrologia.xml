<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imagen_equipo_metrologia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:id="@+id/titulo_equipo_metrologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imagen_equipo_metrologia"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Ejemplo"
            android:textColor="@color/principal_rojo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcion_equipo_metrologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_equipo_metrologia"
            android:layout_toEndOf="@id/imagen_equipo_metrologia"
            android:layout_marginStart="8sp"
            android:text="Aqui va el texto "
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>